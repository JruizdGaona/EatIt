<?xml version="1.0" encoding="utf-8"?>
<!-- Layout principal de la cabecera del menÃº -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/doradoClaro">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imagen"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:lottie_rawRes="@raw/user"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Texto de Bienvenida al usuario -->
    <TextView
        android:id="@+id/msg_bienvenida"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/montserrat_medio"
        android:text="@string/bienvenida"
        android:textColor="@color/negroClaro"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imagen"
        app:layout_constraintStart_toEndOf="@+id/imagen"
        app:layout_constraintTop_toTopOf="@+id/imagen" />
</androidx.constraintlayout.widget.ConstraintLayout>