<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negroClaro">

    <!-- ConstraintLayout para meter el icono de ajustes y menú -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_barra_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <!-- Icono de Menu -->
        <ImageView
            android:id="@+id/menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/ajustes"
            android:src="@drawable/icono_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Icono de Ajustes -->
        <ImageView
            android:id="@+id/ajustes"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/ajustes"
            android:src="@drawable/icono_ajustes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Logo de la aplicación -->
    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="75dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo" />

    <!-- Título de recetas de la aplicación -->
    <TextView
        android:id="@+id/recetas"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat_medio"
        android:gravity="center"
        android:text="@string/actividad_principal"
        android:textColor="@color/doradoClaro"
        android:textSize="25sp" />

    <FrameLayout
        android:id="@+id/panel_recetas"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp">
    </FrameLayout>
</LinearLayout>