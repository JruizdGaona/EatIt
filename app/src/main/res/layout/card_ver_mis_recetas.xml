<?xml version="1.0" encoding="utf-8"?>
<!-- Layout principal para el card de Añadir Recetas -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_card_ver_receta_comunidad">

    <!-- CradView de Añadir Ingredientes -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cradView_ver_receta_comunidad"
        android:layout_width="355dp"
        android:layout_height="680dp"
        app:cardCornerRadius="20dp"
        android:foreground="@color/negroClaro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/negroClaro"
        app:cardBackgroundColor="@color/negroClaro"
        app:strokeWidth="2dp"
        app:strokeColor="@color/doradoClaro">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Imagen con el botón de Cerrar -->
            <ImageView
                android:id="@+id/cerrar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_close"
                android:contentDescription="@string/description_cerrar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- TextView del CardView -->
            <TextView
                android:id="@+id/text_nombre_receta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/montserrat_medio"
                android:text="@string/nombre_receta"
                android:textColor="@color/doradoClaro"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constrainedHeight="true"
                app:layout_constraintHeight_max="400dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_nombre_receta">

                <!-- Layout para el CardView -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cardViewReceta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Layout Nombre de la Receta -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_nombre_receta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="@+id/cardViewReceta">

                        <!-- Texto Nombre de la receta -->
                        <TextView
                            android:id="@+id/texto_ingredientes_receta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/montserrat_medio"
                            android:text="@string/ingredientes_receta"
                            android:textColor="@color/doradoClaro"
                            android:textSize="17sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ingredientes_receta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/montserrat_light"
                            android:text="@string/ingredientes_receta_detalles"
                            android:textColor="@color/doradoClaro"
                            android:textSize="17sp"
                            app:layout_constraintTop_toBottomOf="@+id/texto_ingredientes_receta"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_numero_personas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/layout_nombre_receta">

                        <!-- Texto número de personas de la receta -->
                        <TextView
                            android:id="@+id/texto_personas_receta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/montserrat_medio"
                            android:text="@string/personas_raciones"
                            android:textColor="@color/doradoClaro"
                            android:textSize="17sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/raciones"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="30dp"
                            app:layout_constraintStart_toEndOf="@id/texto_personas_receta"
                            android:fontFamily="@font/montserrat_light"
                            android:text="@string/personas_numero"
                            android:textColor="@color/doradoClaro"
                            android:textSize="17sp"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_nivel_recetas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/layout_numero_personas">

                        <!-- Texto número de personas de la receta -->
                        <TextView
                            android:id="@+id/texto_nivel_receta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/montserrat_medio"
                            android:text="@string/dificultad"
                            android:textColor="@color/doradoClaro"
                            android:textSize="17sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/dificultad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="30dp"
                            app:layout_constraintStart_toEndOf="@id/texto_nivel_receta"
                            android:fontFamily="@font/montserrat_light"
                            android:text="@string/nivel_receta"
                            android:textColor="@color/doradoClaro"
                            android:textSize="17sp"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_duracion_recetas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/layout_nivel_recetas">

                        <!-- Texto número de personas de la receta -->
                        <TextView
                            android:id="@+id/texto_duracion_receta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/montserrat_medio"
                            android:text="@string/duracion_estimada"
                            android:textColor="@color/doradoClaro"
                            android:textSize="17sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tiempo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="30dp"
                            app:layout_constraintStart_toEndOf="@id/texto_duracion_receta"
                            android:fontFamily="@font/montserrat_light"
                            android:text="@string/tiempo"
                            android:textColor="@color/doradoClaro"
                            android:textSize="17sp"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Layout detalles -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/detalles_recetas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/layout_duracion_recetas">

                        <TextView
                            android:id="@+id/texto_detalles_receta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/montserrat_medio"
                            android:text="@string/elaboracion"
                            android:textColor="@color/doradoClaro"
                            android:textSize="17sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/montserrat_light"
                            android:text="@string/pasos_elab"
                            android:textColor="@color/doradoClaro"
                            android:textSize="17sp"
                            app:layout_constraintTop_toBottomOf="@+id/texto_detalles_receta"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

            <!-- Botón de Guardar -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_editar_receta"
                android:layout_width="296dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_login"
                android:fontFamily="@font/montserrat_medio"
                android:gravity="center"
                android:text="@string/btn_editar"
                android:textColor="@color/negroClaro"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/scrollView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Botón de Guardar -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_borrar_receta"
                android:layout_width="296dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_login"
                android:fontFamily="@font/montserrat_medio"
                android:gravity="center"
                android:text="@string/btn_eliminar"
                android:textColor="@color/negroClaro"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/btn_editar_receta"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>