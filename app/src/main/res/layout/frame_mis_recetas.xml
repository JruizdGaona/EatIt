<?xml version="1.0" encoding="utf-8"?>
<!-- Layout principal que contiene la lista de ingrdientes -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_fragment_mis_recetas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- RecyclerView con la Lista de Recetas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_recetas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/list_mis_recetas" />

    <!-- ConstraintLayout para poner el FloatingButton -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- FloatingButton para aÃ±adir Recetas -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButtonMisRecetas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_add"
            android:contentDescription="@string/btn_float"
            app:tint="@null"
            app:elevation="4dp"
            android:focusable="true" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>